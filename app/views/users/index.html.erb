<div class="content">
	<%= render 'layouts/nav' %>
	<div class="mid">
		<div id="user_scroll">
			<table id="user_table">  
				<% @users.each do |user| %>
					<tr>
						<td><%= user.email %></td>
						<td><%= user.admin? ? "Admin" : "User" %></td>
						<% if user.admin %>
							<td colspan="2"><%= button_to "Make User",:controller => "users", :action => "demote", :id => user.id %></td>
						<% else %>
							<td><%= button_to "Make Admin",:controller => "users", :action => "promote", :id => user.id %></td>
							<td><%= button_to "Delete", user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
						<% end %>
					</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>