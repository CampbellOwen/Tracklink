<h1>User Signup</h1>

<%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages' %>

	<table>
            <tr>
                <td>
                    <%= f.label :email %>
                </td>
                <td>
                    <%= f.email_field :email %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label :password %>
                </td>
                <td>
                    <%= f.password_field :password %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= f.label :password_confirmation, "Confirm Password" %>
                </td>
                <td>
                    <%= f.password_field :password_confirmation %>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <%= f.submit "Create My Account" %>
                </td>
            </tr>
        </table>
<% end %>
